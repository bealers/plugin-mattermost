{
  "name": "@bealers/plugin-mattermost",
  "description": "Mattermost client plugin for ElizaOS - enables AI agent integration with Mattermost chat platforms",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "author": "bealers",
  "keywords": [
    "plugin",
    "elizaos",
    "mattermost",
    "chat",
    "client",
    "ai-agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bealers/plugin-mattermost"
  },
  "homepage": "https://elizaos.ai",
  "bugs": {
    "url": "https://github.com/bealers/plugin-mattermost/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    ".npmignore",
    "package.json",
    "tsup.config.ts"
  ],
  "dependencies": {
    "@elizaos/core": "latest",
    "@mattermost/client": "^10.8.0",
    "@mattermost/types": "^10.8.0",
    "axios": "^1.10.0",
    "ws": "^8.18.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@elizaos/cli": "latest",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.4",
    "dotenv": "16.4.5",
    "eslint": "^9.29.0",
    "prettier": "3.5.3",
    "tsup": "8.5.0",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.35.0",
    "vitest": "3.1.4"
  },
  "scripts": {
    "start": "elizaos start",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:component": "vitest run",
    "test:e2e": "elizaos test",
    "publish": "elizaos publish",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "MATTERMOST_SERVER_URL": {
        "type": "string",
        "description": "Mattermost server URL (e.g., https://chat.siftware.com)"
      },
      "MATTERMOST_BOT_TOKEN": {
        "type": "string",
        "description": "Mattermost bot access token"
      },
      "MATTERMOST_BOT_USERNAME": {
        "type": "string",
        "description": "Mattermost bot username (e.g., beaker)"
      },
      "MATTERMOST_WEBHOOK_TOKEN": {
        "type": "string",
        "description": "Mattermost webhook token for incoming messages"
      }
    }
  },
  "gitHead": "d5bd5c43bfebeb7ac02f9e029f924cb6cd5c2ec7"
}
